<%= form_for @offer, url: create_offer_path do |f| %>
  <%= f.text_field :mentor_id, {value: current_mentor.id, hidden: true}  %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :category_id, "Category" %>
  <%= f.select :category_id, @categories %>
  <br>
  <%= f.submit "Submit" %>
<% end %>