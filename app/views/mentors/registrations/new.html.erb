<h2>Mentor Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "mentors/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :designation %><br />
    <%= f.text_field :designation, autofocus: true, autocomplete: "designation" %>
  </div>

  <div class="field">
    <%= f.label :organization %><br />
    <%= f.text_field :organization, autofocus: true, autocomplete: "organization" %>
  </div>

    <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, autofocus: true, autocomplete: "bio" %>
  </div>

  <div class="field">
    <%= f.label :achievements %><br />
    <%= f.text_area :achievements, autofocus: true, autocomplete: "achievements" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

    <div class="field">
    <%= f.label :mobile_number %><br />
    <%= f.text_field :mobile_number, autofocus: true, autocomplete: "mobile_number" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "mentors/shared/links" %>
